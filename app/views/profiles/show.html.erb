<div class="page-header">
  <h1><%= @user.full_name %></h1>
  <h4><%= link_to "Edit" ,edit_user_registration_path %> </h4>
</div>

<% if @statuses %>
  <% @statuses.each do |status| %>
    <div class="well">
      <%= status.content %>
      <hr />
      <%= link_to time_ago_in_words(status.created_at)+" ago"  , status_path(status) %> 
       | <%= link_to "Edit",edit_status_path(status) %> | 
         <%= link_to "Delete", status, method: :delete , data: { Confirm: "Are You Sure you delete the status" }%>
    </div>
  <% end %>
<% end %>